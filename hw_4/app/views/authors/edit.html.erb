<%= render 'posts/header' %>

<div class="p-4 p-md-5 mb-4">
  <div class="px-0 p-4">
    <h1 class="display-4 font-italic text-center">Update your profile</h1>
  </div>
</div>

<div class="row justify-content-center align-items-center h-100">
  <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
    <%= form_for(@author) do |f| %>
      <%#= render 'shared/error_messages' %>

      <div class="field">
        <%= f.label :first_name, :class => "form-label" %><br/>
        <%= f.text_field :first_name, :class => "form-control shadow-none" %>
      </div>
      <div class="field">
        <%= f.label :last_name, :class => "form-label" %><br/>
        <%= f.text_field :last_name, :class => "form-control shadow-none" %>
      </div>
      <div class="field">
        <%= f.label :email, :class => "form-label" %><br/>
        <%= f.text_field :email, :class => "form-control shadow-none" %>
      </div>
      <div class="field">
        <%= f.label :password, :class => "form-label" %><br/>
        <%= f.password_field :password, :class => "form-control shadow-none" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, :class => "form-label" %><br/>
        <%= f.password_field :password_confirmation, :class => "form-control shadow-none" %>
      </div>
      <%= f.submit "Save changes", :class => "btn btn-outline-success shadow-none" %>
    <% end %>
    <br>
    <br>
    <%= gravatar_for @author %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>