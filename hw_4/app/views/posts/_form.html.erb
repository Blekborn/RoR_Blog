<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :author, :class => "form-label" %>
    <%= form.select(:author_id, Author.all.collect {|a| [ a.full_name, a.id ] }, :class => "form-control") %>
  </div>

  <div class="form-group">
    <%= form.label :title, :class => "form-label" %>
    <%= form.text_field :title, :class => "form-control shadow-none" %>
  </div>

  <div class="form-group">
    <%= form.label :content, :class => "form-label" %>
    <%= form.text_area :content, :rows => 5, :class => "form-control shadow-none" %>
  </div>

  <div class="form-group">
    <%= form.label :image, :class => "form-label" %>
    <%= form.text_field :image, :class => "form-control shadow-none", placeholder: "Image url" %>
  </div>

  <%= form.submit :class => "btn btn-outline-success shadow-none" %>
<% end %>
