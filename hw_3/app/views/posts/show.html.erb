<p id="notice"><%= notice %></p>
<div class="row justify-content-center align-items-center h-100">
  <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
    <div class="p-3 mb-2 bg-light text-dark">
      <p>
        <strong>Author:</strong>
        <%= @post.author.first_name %>
      </p>
    </div>
    <div class="p-3 mb-2 bg-light text-dark">
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>
    </div>
    <div class="p-3 mb-2 bg-light text-dark">
      <p>
        <strong>Content:</strong>
        <%= @post.content %>
      </p>
    </div>
    <div class="p-3 mb-2 bg-light text-dark">
      <p>
        <strong>Image:</strong>
        <br>
        <%= image_tag(@post.image, height: '300', width: '300') %>
      </p>
    </div>
    <p><%= distance_of_time_in_words(@post.created_at, Time.now) %></p>
    <p class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-fill" viewBox="0 0 16 16">
        <path d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9.06 9.06 0 0 0 8 15z"/>
      </svg> <span class="badge"><%= @post.comments.count %></span>
    </p>
    <%= render @post.comments %>

    <h2>Add a comment:</h2>
    <%= render 'comments/form_comment' %>
    <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-primary" %>
    <%= link_to 'Back', posts_path, :class => "btn btn-primary" %>
  </div>
</div>