
<%= form_with model: [@post, @post.comments.build], local: true do |form| %>
  <p>
    <%= form.label :author %><br>
    <%= form.select :author_id, Author.pluck(:first_name, :id), :class => "form-text" %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.collection_select :status, Comment.statuses.map { |a| [a.first, a.first] }, :first, :second %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>