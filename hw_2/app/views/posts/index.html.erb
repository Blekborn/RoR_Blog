<p id="notice"><%= notice %></p>

<h1 class="text-center">Posts</h1>

<table class="table">
  <thead>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Image</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.title %></td>
      <td><%= image_tag(post.image, height: '50', width: '50') %></td>
      <td><%= post.content %></td>
      <td style="width: 30px;"><%= link_to 'Show', post, :class => "btn btn-primary" %></td>
      <td style="width: 30px;"><%= link_to 'Edit', edit_post_path(post), :class => "btn btn-primary" %></td>
      <td style="width: 30px;"><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-primary" %></td>
    </tr>


  <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <%= link_to 'New Post', new_post_path, :class => "btn btn-primary" %>
</div>
