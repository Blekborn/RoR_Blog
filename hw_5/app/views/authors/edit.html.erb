
<div class="p-4 p-md-5 mb-4">
  <div class="px-0 p-4">
    <h1 class="display-4 font-italic text-center">Update your profile</h1>
  </div>
</div>
<div class="row justify-content-center align-items-center">
  <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
    <%= form_for(@author, html: { multipart: true }) do |f| %>
      <% if @author.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% @author.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name, :class => "form-label" %>
        <%= f.text_field :first_name, :class => "form-control shadow-none" %>
      </div>
      <div class="form-group">
        <%= f.label :email, :class => "form-label" %>
        <%= f.email_field :email, :class => "form-control shadow-none" %>
      </div>
      <div class="form-group">
        <%= f.label :password, :class => "form-label" %>
        <%= f.password_field :password, :class => "form-control shadow-none" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", :class => "form-label" %>
        <%= f.password_field :password_confirmation, :class => "form-control shadow-none" %>
      </div>
      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>
      <%= f.submit "Create my account", :class => "btn btn-outline-success shadow-none" %>
    <% end %>
    <br>
<!--    <div class="gravatar_edit">-->
      <%#= gravatar_for @author %>
<!--      <a href="http://gravatar.com/emails" target="_blank">change</a>-->
<!--    </div>-->
  </div>
</div>